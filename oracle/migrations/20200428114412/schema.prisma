datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Instituiton {
  id String @id
  name String
  oracle String @unique
}

model Course {
  id String @default(cuid()) @id
  courseId Int @unique
  name String
  instructor String
  info String? // IPFS hash
}

model Student {
  id String @default(cuid()) @id
  name String
  address String @unique
  pub String @unique
}

model Cert {
  id String @default(cuid()) @id
  info String
  course Course @relation(fields: [courseId], references: [id])
  courseId String
  holder Student @relation(fields: [studentId], references: [id])
  studentId String
}

